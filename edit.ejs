<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
</head>
<body>
    <h1>Edit Product</h1>
    <form action="/products/<%= product._id %>?_method=PUT" method="put">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required><br>
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" value="<%= product.category %>" required><br>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required><br>
        <label for="stockQuantity">Stock Quantity:</label>
        <input type="number" id="stockQuantity" name="stockQuantity" value="<%= product.stockQuantity %>" required><br>
        <label for="additionalInfo">Additional Info:</label>
        <input type="text" id="additionalInfo" name="additionalInfo" value="<%= product.additionalInfo %>"><br>
        <label for="storeID">Store ID:</label>
        <input type="text" id="storeID" name="storeID" value="<%= product.storeID %>" required><br>
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= product.location %>" required><br>
        <label for="supplierID">Supplier ID:</label>
        <input type="text" id="supplierID" name="supplierID" value="<%= product.supplierID %>" required><br>
        <button type="submit">Save Changes</button>
    </form>
</body>
</html>
